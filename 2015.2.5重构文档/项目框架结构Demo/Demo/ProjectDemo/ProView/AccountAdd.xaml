<scr:NormalWindow x:Class="ProView.AccountAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:scr="clr-namespace:UserWindow;assembly=UserWindow"   Style="{DynamicResource NormalWindowStyle}"
        Title="用户添加" Height="300" Width="300">
    <Grid Background="#AAEEEEEE" >
          <Grid.RowDefinitions>
             <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="20" Grid.Row="0" Orientation="Horizontal">
            <Label Content="用户名:"></Label>
            <TextBox Width="200"></TextBox>
        </StackPanel>
        <StackPanel Margin="20"  Grid.Row="1"  Orientation="Horizontal">
            <Label Content="密码   :"></Label>
            <TextBox Width="200"></TextBox>
        </StackPanel>

        <StackPanel  Margin="20" Grid.Row="2"  Orientation="Horizontal">
            <Button Content="登录"   Width="100" Height="30" ></Button>
        </StackPanel>
    </Grid>
</scr:NormalWindow>
