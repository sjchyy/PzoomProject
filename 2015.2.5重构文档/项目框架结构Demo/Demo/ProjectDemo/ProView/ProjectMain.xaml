<UserControl x:Class="ProjectMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="概览"></Label>
            <Button Content="添加" x:Name="ButtonAdd" HorizontalAlignment="Left" ></Button>
            <Button Content="修改" x:Name="ButtonUpdate" HorizontalAlignment="Left" ></Button>

            <Button Content="删除" x:Name="ButtonDelete" HorizontalAlignment="Left" ></Button>
            <Button Content="转至百度管理－关键词" x:Name="ButtonRouteToKeyword" HorizontalAlignment="Left" ></Button>
            <Button Content="调用百度管理－下载数据" x:Name="ButtonRouteToDownloadData" HorizontalAlignment="Left" ></Button>
            <Button Content="调用百度管理－添加计划" x:Name="ButtonRouteToAddPlan" HorizontalAlignment="Left" ></Button>
            <Button Content="更新Token" x:Name="ButtonTokenUpdate" HorizontalAlignment="Left" ></Button>

            <ListView x:Name="AccountListView" DisplayMemberPath="UserName" ></ListView>
        </StackPanel>
          
    </Grid>
</UserControl>
