<UserControl x:Class="ProjectMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="概览"></Label>
            <Button Content="添加" x:Name="ButtonAdd" HorizontalAlignment="Left" ></Button>
            <Button Content="修改" x:Name="ButtonUpdate" HorizontalAlignment="Left" ></Button>

            <Button Content="删除" x:Name="ButtonDelete" HorizontalAlignment="Left" ></Button>
            <ListView x:Name="AccountListView"></ListView>
        </StackPanel>
          
    </Grid>
</UserControl>
