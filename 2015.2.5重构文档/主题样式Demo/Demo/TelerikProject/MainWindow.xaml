<Window x:Class="TelerikProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:telerik="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls"
        Title="MainWindow" Height="350"  Background="Transparent" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen"  WindowStyle="None" Width="525">
    <Grid>
        <Border  Background="Transparent">
            <Border Margin="5" Background="#FFFFFF" BorderThickness="1" BorderBrush="Black">
                <telerik:RadButton  Width="100" Height="50" />
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="0"  BlurRadius="15" Opacity="1" />
                </Border.Effect>
            </Border>
           
        </Border>

    </Grid>
</Window>
