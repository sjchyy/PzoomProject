    <Style  x:Key="{local:ThemeResourceKey ThemeType= local:Theme_Win7 ,ElementType=local:ALabel}" TargetType="{x:Type local:ALabel}">
        <Setter Property="Background" Value="Blue"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ALabel}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>