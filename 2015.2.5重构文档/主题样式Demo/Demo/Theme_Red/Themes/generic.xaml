<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:control="clr-namespace:ThemesControl;assembly=ThemesControl"
                      xmlns:theme="clr-namespace:ThemeBase;assembly=ThemeBase"
                    xmlns:local="clr-namespace:Theme_Red"
                 
                    >
    <Style  x:Key="{theme:ThemeResourceKey ThemeType= local:Theme_Red ,ElementType=control:PLabel}" TargetType="{x:Type control:PLabel}">
        <Setter Property="Background" Value="Gray"/>
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:PLabel}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>